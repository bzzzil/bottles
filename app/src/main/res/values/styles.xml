<resources>

    <!-- Base application theme. -->
    <style name="AppThemeList" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.AppActionBarMain</item>
    </style>

    <style name="AppThemeOtherPages" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.AppActionBar</item>
    </style>

    <style name="Widget.AppActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/theme_color</item>
    </style>

    <style name="Widget.AppActionBarMain" parent="@style/Widget.AppActionBar">
        <item name="logo">@drawable/actionbar_logo</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

</resources>
