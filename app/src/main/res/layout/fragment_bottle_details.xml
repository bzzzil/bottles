<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.bzzzil.bottles.BottleDetailsActivityFragment"
    android:id="@+id/bottle_id">

    <TextView android:text="@string/column_type" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottle_details_type" />

    <TextView android:text="@string/column_country" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottle_details_type"
        android:id="@+id/bottle_details_country" />

    <TextView android:text="@string/column_manufacturer" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottle_details_country"
        android:id="@+id/bottle_details_manufacturer" />

    <TextView android:text="@string/column_title" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottle_details_manufacturer"
        android:id="@+id/bottle_details_title" />

    <TextView android:text="@string/column_volume" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottle_details_title"
        android:id="@+id/bottle_details_volume" />

    <TextView android:text="@string/column_degree" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottle_details_volume"
        android:id="@+id/bottle_details_degree" />

</RelativeLayout>
